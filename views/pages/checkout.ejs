<!doctype html>
<html lang="en">
<head>
<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<!-- font awsome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<!-- Custom CSS -->
<title>LELO</title>
</head>
<body class="container-fluid pt-5 mt-4">
<h2 class="text-center">lelo cart</h2>
<%- include('../partials/header'); %>
<%- include('../partials/errorDiv'); %>
<div class="col-12 bg-success text-white mt-2 mb-2 " onclick="this.remove()">
    <p id="successText" class="text-center fs-4"></p>
</div>
<div class="container-fluid mt-2">
<div class="row mt-2 g-2">
    <% for(let i in products){ %>
    <div id="<%= products[i].productId.id+'parent'%>" class="col-xs-12 col-sm-4 col-lg-3 mb-3 mb-sm-0 mh-25 shadow">
        <div class="card">
            <img src="<%= products[i].productId.image %>" class="card-img-top" height="250vh">
            <div class="card-body">
                <h5 class="card-title"><%= products[i].productId.name %> </h5>
            </div>
            <ul class="list-group list-group-flush ">
                <li id="<%= products[i].productId.id+'totalPriceItem'%>" class="list-group-item">Price: <b class="text-primary fs-5"><%= products[i].productId.price*products[i].qty %></b></li>
                <li class="list-group-item d-flex justify-content-around align-content-center">
                Quantity: <b><%= products[i].qty %></b> 
            </ul>
        </div>
    </div>
    <% }%>
</div>
</div>
<div class="offset-8 col-4 fs-2" id="totalPrice">total price: <b class="text-success"><%= totalPrice %></b></div>
<a href="/" class="btn btn-warning col-12"> Make payment </a>
</body>
</html>

<!-- Optional JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>