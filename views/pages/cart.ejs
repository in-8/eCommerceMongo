  <body class="container-fluid pt-5 mt-4">
    <h2 class="text-center">lelo cart</h2>
    <%- include('../partials/header'); %>
    <%- include('../partials/errorDiv'); %>
    <%- include('../partials/cartProducts'); %>
    <div class="offset-8 col-4 fs-2 " id="totalPrice">total price: <b class="text-success"><%= totalPrice %></b></div>
